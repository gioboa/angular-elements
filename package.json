{
  "name": "angular-elements-loading-widget",
  "version": "1.0.0",
  "description": "loading-widget using @angular/elements - demo purpose",
  "main": "webpack.config.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gioboa/angular-elements-loading-widget.git"
  },
  "author": "",
  "bugs": {
    "url": "https://github.com/gioboa/angular-elements-loading-widget/issues"
  },
  "homepage": "https://github.com/gioboa/angular-elements-loading-widget#readme",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild" : "rm -f ./enviroments/html/dist/main.bundle.js && rm -f ./enviroments/react/public/main.bundle.js && rm -f ./enviroments/vue/public/main.bundle.js",
    "build": "webpack",
    "postbuild": "cp ./dist/* ./enviroments/html/dist/ && cp ./dist/* ./enviroments/react/public/ && cp ./dist/* ./enviroments/vue/public/",
    "serve:html": "http-server ./enviroments/html/ -c-1 -o",
    "serve:react": "cd ./enviroments/react/ && npm run serve",
    "serve:vue": "cd ./enviroments/vue/ && npm run serve"

  },
  "dependencies": {
    "@angular/common": "^5.2.2",
    "@angular/compiler": "^5.2.2",
    "@angular/core": "^5.2.2",
    "@angular/elements": "github:angular/elements-builds#labs/elements",
    "@angular/platform-browser": "^5.2.2",
    "@angular/platform-browser-dynamic": "^5.2.2",
    "core-js": "^2.5.3",
    "mutation-observer": "^1.0.3",
    "rxjs": "^5.5.6",
    "zone.js": "^0.8.20"
  },
  "devDependencies": {
    "@angular/cli": "^1.6.6",
    "@angular/compiler-cli": "^5.2.2",
    "@ngtools/webpack": "^1.9.6",
    "compression-webpack-plugin": "^1.1.3",
    "custom-elements": "^1.0.2",
    "http-server": "^0.11.1",
    "typescript": "~2.6.2",
    "webpack": "^3.10.0"
  }
}
